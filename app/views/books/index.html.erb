<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
     <ul>error
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>
		<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>


	<div class="col-xs-9">
		<h2>Books</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="5"></th>
				</tr>
			</thead>

			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td>
						<%= link_to(book.user) do %>
						<%= attachment_image_tag book.user, :profile_image, size:'50x50', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
						<% end %>
					</td>
					<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
					<td><%= book.body %></td>
					<td>
						<% if current_user.already_favorited?(book)%>
						  <%= link_to book_favorites_path(book), method: :delete do %>
							<i class="fas fa-heart"></i>
						  <% end %>
						<%else%>
						  <%= link_to book_favorites_path(book), method: :post do %>
							<i class="fas fa-heart"></i>
						  <% end %>
						<% end %>
						  <%=book.favorites.count %>
					</td>
					<td><%= link_to "#{book.book_comments.count} 件コメント",book_path(book.id) %></td>

				　　</tr>
				<% end %>
			</tbody>
		</table>

		<!--books一覧 -->


	</div>
</div>