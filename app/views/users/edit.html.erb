<h2>User info</h2>
<% if flash[:notice] %>
  <div class="flash"><%= flash[:notice] %></div>
<% end %>
<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>

	<h3><%= @user.errors.count %>error occurrence</h3><!--エラーメッセ-->
	<ul>
		<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<!-- エラーメッセージ表示-->
  <div class="field">
	<%= f.label :name %>
	<%= f.text_field :name %>
  </div>
  <div class="field">
	<%= f.label :image %>
	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
  </div>
  <div class="field">
	<%= f.label :introduction %>
	<%= f.text_area :introduction  %>
  </div>
  <div class="actions">
	<%= f.submit 'Update User' %>
  </div>
<% end %>